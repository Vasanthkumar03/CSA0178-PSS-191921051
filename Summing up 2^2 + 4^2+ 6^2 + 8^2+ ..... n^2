#include <stdio.h>
int main() 
{
    int n, sum;
    printf("Enter the value of n: ");
    scanf("%d", &n);
    if (n < 1 || n % 2 != 0) 
{
        printf("Please enter a positive even value of n.\n");
        return 1;
}
    sum = (n * (n + 1) * (2 * n + 1)) / 3;
    printf("Sum of the series 2^2 + 4^2 + 6^2 + ... + %d^2 is: %d\n", n, sum);
    return 0; 
}
